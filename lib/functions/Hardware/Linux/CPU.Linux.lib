# ·································
# Checking if the CPU is mono-core.

# Featured function(s) and file(s) by module(s) and from the "functions" folder :
#   - BU.Main.CMDS.GetCommandPath() -> Main -> CMDS.lib

# shellcheck disable=
function BU.Hardware.Linux.CPU.IsMonocore()
{
    if [ -r /proc/cpuinfo ]; then
        if [ "$(grep -c 'processor' /proc/cpuinfo)" -eq 1 ]; then
            return 0;
        else
            return 1;
        fi
    else
        if BU.Main.CMDS.GetCommandPath 'nproc'; then
            if [ "$(nproc)" -eq 1 ]; then
                return 0;
            else
                return 1;
            fi
        else
            echo "Unable to get the number of cores for this computer"; return 1;
        fi
    fi
}

