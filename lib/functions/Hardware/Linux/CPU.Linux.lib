# ··············································
# Checking if the CPU's architecture is 32 bits.

# Featured function(s) and file(s) by module(s) and from the "functions" folder :
#   - BU.Main.CMDS.GetCommandPath() -> Main -> CMDS.lib

# shellcheck disable=
function BU.Hardware.Linux.CPU.Is32Bits()
{
    if BU.Main.CMDS.GetCommandPath 'lscpu' && [ "$(lscpu | grep "CPU op-mode(s)" | awk '{print $3$4}')" == '32-bit' ]; then return 0; else return 1; fi
}

# ··············································
# Checking if the CPU's architecture is 64 bits.

# Featured function(s) and file(s) by module(s) and from the "functions" folder :
#   - BU.Main.CMDS.GetCommandPath() -> Main -> CMDS.lib

# shellcheck disable=
function BU.Hardware.Linux.CPU.Is64Bits()
{
    if BU.Main.CMDS.GetCommandPath 'lscpu' && [ "$(lscpu | grep "CPU op-mode(s)" | awk '{print $3 $4}')" == '32-bit, 64-bit' ]; then return 0; else return 1; fi
}

# ····················································
# Checking if the CPU's architecture is AArch 32 bits.

# Featured function(s) and file(s) by module(s) and from the "functions" folder :
#   -

# shellcheck disable=
function BU.Hardware.Linux.CPU.IsArchAArch32()
{
    #**** Variables ****
    local cpuarch;  # VAR TYPE : String     # DESC :

    #**** Code ****
    if BU.Main.CMDS.GetCommandPath 'lscpu'; then
        cpuarch="$(lscpu | grep "Architecture" | awk '{print $2}')";

        if [ "${cpuarch}" == "armv7l" ] || [ "${cpuarch}" == "armv6l" ]; then
            return 0;
        else
            return 1;
        fi
    else
        return 1;
    fi
}

