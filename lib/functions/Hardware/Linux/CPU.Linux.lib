# shellcheck disable=
function BU.Hardware.Linux.CPU.GetClockFrequency()
{
    if BU.Main.CMDS.GetCommandPath 'lshw'; then
        if BU.Main.Checkings.CheckRootEUID; then
            echo "$(lshw -class processor | awk 'FNR == 13 {print $2}')";

