#!/usr/bin/env bash

# ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; #

#################################### DEFINING LIBRARY FUNCTIONS ###################################

#### COLORING CHARACTERS

## 

#
function Color
{
    #***** Parameters *****
    color=$1
    chars=$2
    
    #***** Code *****
    if [ "$chars" = 'line' ] || [ "$chars" = 'l' ]; then
        CheckLineColor "$color"
        
        # As the "$COL_RESET" variable stores the "tput sgr0" command, calling it here won't change anything.
        if [ "$color" = "$(tput sgr0)" ]; then
            # As the command is run in the condition, calling the "tput sgr0" command will execute it for a second time.
            return
        else
            tput setaf "$color"
        fi
        
    elif [ "$chars" = 'text' ] || [ "$chars" = 't' ]; then
        CheckLineColor "$color"
        
        if [ "$color" = "$(tput sgr0)" ]; then
            return
        else
            tput setaf "$color"
        fi
        
    else
        echo "$(tput setaf) Error :$(tput sgr0) The \"Color\" function's \"chars\" argument is incorrect."
    fi
}
