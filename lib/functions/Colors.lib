#################################### DEFINING LIBRARY FUNCTIONS ###################################

#### COLORS PROCESSING

## COLORING CHARACTERS

#
function Color
{
    #***** Parameters *****
    color=$1
    chars=$2

    #***** Code *****
    if [ "$color" = "$(tput sgr0)" ]; then
        # As the command is run in the condition, calling the "tput sgr0" command will execute it for a second time.
        return
    else
        CheckLineColor
        if [ "$chars" = 'line' ] || [ "$chars" = 'l' ]; then
            echo "$(tput setaf "$color")"
        elif [ "$chars" = 'text' ] || [ "$chars" = 't' ]; then
            echo "$(tput setaf "$color")"
        else
            echo "$(tput setaf 196) Error :$(tput sgr0) The \"Color\" function's \"chars\" argument is incorrect."
            exit 1
        fi
    fi
}
