#################################### DEFINING LIBRARY FUNCTIONS ###################################

#### TEXT COLORS PROCESSING

## COLORING CHARACTERS

#
function ColorChar
{
    #***** Parameters *****
    opt=$1
    color=$2

    #***** Code *****
    set -x
    CheckTextColor "$opt" "$color"
    set +x
    
    if [ "$opt" = "setaf" ]; then
        tput setaf "$color"
    elif [ "$opt" = "sgr0" ]; then
        tput sgr0
        return
    fi
}
