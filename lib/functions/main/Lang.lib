# Parsing the created translation file to add the arguments values of the function where the translated message's variable is called.
function _tr()
{
    #***** Parameters *****
    p_translated=$1; shift

    p_variables_array=("$@")

    #***** Code *****
    if [ ! -f "$__BU_MAIN_PROJECT_TR_FILE_PATH" ]; then
        # If the main module is initialized AND a module is being translated.
        if CheckStatIsInitializing || ! CheckStatIsTranslated; then
            EchoError "UNABLE TO FIND THE MAIN MODULE'S CREATED TRANSLATIONS FILE"
        else
            EchoError "$__BU_MAIN_MSG__tr_TRANSLATION_FILE_NOT_FOUND" 
        fi

        exit 1
    else
        # ALGORITHME :
        # Lire le fichier jusqu'à trouver le nom de la variable contenant la chaîne de caractère souhaitée, passé en premier argument.
        #   Si la variable n'est pas trouvée, alors retourner 1
        #   Sinon, lire chaque argument passé.
        #       Si une chaîne de caractères est entourée du symbole %% dans la chaîne de caractères principale, alors remplacer cette chaîne par la valeur de son paramètre positionnel.
        while read -r line; do

            # If the wanted translations file path is not found in the computer's hard drive.
            if ! grep -q "$p_translated" "$__BU_MAIN_PROJECT_TR_FILE_PATH"; then

                # If the library's main module is initializing OR if the same module is not yet translated.
                if CheckStatIsInitializing || ! CheckStatIsTranslated; then
                    HandleErrors '1' "THE $(DechoHighlight "$p_translated") sentence was not found in the $(DechoHighlight "$__BU_MAIN_PROJECT_TR_FILE_PATH") file" \
                        "Please verify the spelling of the variable's name, " "$p_translated" "$(basename "${BASH_SOURCE[0]}")" "${FUNCNAME[0]}" "$(( LINENO-2 ))"

                # Else, if the main module is initialized AND the same module is translated.
                else
                    HandleErrors '1' "$__BU_MAIN_MSG__tr_SENTENCE_NOT_FOUND" "$__BU_MAIN_MSG__tr_SENTENCE_NOT_FOUND_ADVICE" "$p_translated" \
                        "$(basename "${BASH_SOURCE[0]}")" "${FUNCNAME[0]}" "$(( LINENO-4 ))" 
                fi

                exit 1

            # Else, if the wanted translations file path is found.
            else
                for var in "${p_variables_array[@]}"; do

                    # If the wanted value is not found in its array
                    if ! grep -q "$var" "$__BU_MAIN_PROJECT_TR_FILE_PATH"; then

                        # If the library's main module is initializing OR if the same module is not yet translated.
                        if CheckStatIsInitalizing || ! CheckStatIsTranslated; then
                            HandleErrors '1' "THE $(DechoHighlight "$var") variable was not found in the variables array" "Verify if you corectly wrote the value or the variable's name you passed" \
                                "$var" "$(basename "${BASH_SOURCE[0]}")" "${FUNCNAME[0]}" "$(( LINENO-2 ))"

                        # Else, if the main module is initialized AND the same module is translated.
                        else
                            HandleErrors '1' "$__BU_MAIN_MSG__tr_VARIABLE_INDEX_NOT_FOUND" "$__BU_MAIN_MSG__tr_VARIABLE_INDEX_NOT_FOUND_ADVICE" \
                                "$var" "$(basename "${BASH_SOURCE[0]}")" "${FUNCNAME[0]}" "$(( LINENO-4 ))"
                        fi

                    # Else, if the wanted value is found in its array.
                    else
                        echo ""
                    fi
                done
            fi
        done < "$__BU_MAIN_PROJECT_TR_FILE_PATH"
    
        return 0
    fi
}
