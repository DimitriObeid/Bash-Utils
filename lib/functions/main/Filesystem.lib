    BU::Main::Echo::Debug "$(basename "${BASH_SOURCE[0]}")" "${FUNCNAME[0]}" "" "";

    #**** Parameters ****
    local p_path=$1;    # String    - Path of the file or the folder to process.

    #**** Variables ****
