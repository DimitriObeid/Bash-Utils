function Decho { echo -e "${__2}$1$__COL_RESET"; }    # Colouring a part of a simple message written via the "echo" command.

## Pun between "deco(ration)" and "echo", followed by the first letter of the message type name (error (E), moving to a new sub-step (N) or success (S)).
function DechoE { Decho "$1" "$__COL_RED"; }
function DechoN { Decho "$1" "$__COL_YELLOW"; }
function DechoS { Decho "$1" "$__COL_GREEN"; }

