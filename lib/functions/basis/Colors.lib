## CHARACTERS COLORATION

# Coloring a character
function ColorChar
{
    #***** Parameters *****
    option=$1
    color_code=$2

    #***** Code *****
#    CheckTextColor "$opt" "$color"
    
    if CheckTextColor "$option" "$color_code"; then
        if [ "$option" = "setaf" ]; then
            SetCurrentColor "$color_code"
            tput setaf "$color_code"
        elif [ "$option" = "sgr0" ]; then
            tput sgr0
            
            return
        fi
    else
        echo "test"
        kill "$$"
    fi
}

